@inherits LayoutComponentBase
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Authorization
@using Newtonsoft.Json;
@using  System.Linq;
@inject AuthenticationStateProvider AuthenticationStateProvider
<NldsSkiplink>Ga direct naar inhoud</NldsSkiplink>
<NldsNavigation Color="Color.DonkerBlauw">
    <NldsNavigationList>
        <AuthorizeView>
            <NotAuthorized>
                <NldsNavigationItem Uri="/aanmelden?redirectUri=/" Title="Aanmelden"><Content><NldsIcon Icon="Icon.Secure" />Aanmelden</Content></NldsNavigationItem>
            </NotAuthorized>
            <Authorized>
                <NldsNavigationItem Uri="mijnzaken" Title="Home"><Content><NldsIcon Icon="Icon.Home" />Mijn zaken</Content></NldsNavigationItem>
                <NldsNavigationItem Uri="mijnkluis" Title="Mijn Kluis"><Content><NldsIcon Icon="Icon.Secure" />Mijn Kluis</Content></NldsNavigationItem>
                <NldsNavigationItem Uri="tijdlijn" Title="Tijdlijn"><Content><NldsIcon Icon="Icon.List" />Tijdlijn</Content></NldsNavigationItem>
                <NldsNavigationItem Uri="vragen" Title="Vragen"><Content><NldsIcon Icon="Icon.Question" />Vragen</Content></NldsNavigationItem>
                <NldsNavigationItem Uri="afmelden" Title="Aanmelden"><Content><NldsIcon Icon="Icon.Secure" />Afmelden</Content></NldsNavigationItem>
            </Authorized>
        </AuthorizeView>
    </NldsNavigationList>
</NldsNavigation>
<AuthorizeView>
    <Authorized>
        <main class="smain" id="content" tabindex="-1">
            <div class="container">
                <div class="row">
                    <div class="col-xl-8 col-xl-offset-2 col-lg-10 col-lg-offset-1">
                        <div class="content-background">
                            <div class="content">
                                <div class="docs-section" id="grid">
                                     @Body
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </Authorized>
</AuthorizeView>
